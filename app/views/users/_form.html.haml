= form_for @user, html: { class: 'form-horizontal', multipart: true } do |f|
  = render partial: 'shared/form_errors', locals: { resource: @user }

  %fieldset
    %legend Login Information

    .control-group
      = f.label :email, class: 'control-label'
      .controls
        = f.text_field :email, class: 'input-xxlarge'

    -# .control-group
    -#   = f.label :status, class: 'control-label'
    -#   .controls
    -#     = f.collection_select :status, User::STATUSES, :to_s, :humanize

    - if @user == current_user
      .control-group
        = f.label :password, class: 'control-label'
        .controls
          = f.password_field :password, class: 'input-xxlarge'
          - unless @user.new_record?
            %span.help-inline Leave blank if you don't want to change it

      .control-group
        = f.label :password_confirmation, class: 'control-label'
        .controls
          = f.password_field :password_confirmation, class: 'input-xxlarge'

  %fieldset
    %legend Personal Information

    .control-group
      = f.label :first_name, class: 'control-label'
      .controls
        = f.text_field :first_name, class: 'input-xxlarge'

    .control-group
      = f.label :last_name, class: 'control-label'
      .controls
        = f.text_field :last_name, class: 'input-xxlarge'

    .control-group
      = f.label :title, class: 'control-label'
      .controls
        = f.text_field :title, class: 'input-xxlarge'

    .control-group
      = f.label :address, class: 'control-label'
      .controls
        = f.text_field :address, class: 'input-xxlarge'

    .control-group
      = f.label :city, class: 'control-label'
      .controls
        = f.text_field :city, class: 'input-xxlarge'

    .control-group
      = f.label :state, class: 'control-label'
      .controls
        = f.select :state,
          ActionView::Helpers::States::US.zip(ActionView::Helpers::States::US_SHORT),
          prompt: "Select State...", class: 'input-xlarge'

    .control-group
      = f.label :zipcode, class: 'control-label'
      .controls
        = f.text_field :zipcode, class: 'input-xxlarge'

    .control-group
      = f.label :phone, class: 'control-label'
      .controls
        = f.text_field :phone, class: 'input-xxlarge'

    .control-group
      = f.label :avatar, 'Profile Picture', class: 'control-label'
      .controls
        = f.file_field :avatar

  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', users_path, class: 'btn btn-inverse'
