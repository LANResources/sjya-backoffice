.modal.fade#new-measurement-modal{role: 'dialog', aria: {labelledby: 'new-measurement-modal-label', hidden: 'true'}}
  .modal-dialog
    .modal-content
      = form_for [measure, measurement], remote: true, html: { class: 'form-horizontal' } do |f|
        .modal-header
          %button.close{type: 'button', data: {dismiss: 'modal'}, aria: {hidden: 'true'}} &times;
          %h4.modal-title#new-measurement-modal-label New Measurement

        .modal-body
          %h4= @measure.description

          .form-group
            = f.label :year, class: 'control-label col-sm-2'
            .col-sm-10
              = f.hidden_field :year
              %p.form-control-static
                = measurement.year

          .form-group
            = f.label :value, class: 'control-label col-sm-2'
            .col-sm-10
              = f.text_field :value, class: 'form-control'

        .modal-footer
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close
          = f.submit 'Create', class: 'btn btn-primary'
