#sidebar-left.col-lg-2.col-sm-1{data: {'turbolinks-permanent' => true}}
  -# .row-fluid.actions
  -#   %input.search.span12{placeholder: "...", type: "text"}/
  .nav-collapse.sidebar-nav.collapse.navbar-collapse.bs-navbar-collapse
    %ul.nav.nav-tabs.nav-stacked.main-menu
      %li{data: {active: 'measures#index'}}
        = link_to main_app.root_url do
          %i.fa.fa-dashboard.fa-fw
          %span.hidden-sm Dashboard

      %li{data: {active: 'static_pages#about'}}
        = link_to about_url do
          %i.fa.fa-info.fa-fw
          %span.hidden-sm About Us

      %li{data: {active: 'surveys attempts questions'}}
        = link_to rapidfire.activities_url do
          %i.fa.fa-bullhorn.fa-fw
          %span.hidden-sm Activities

      - if policy(Reports::Report).index?
        %li{data: {active: 'reports'}}
          = link_to reports_url do
            %i.fa.fa-bar-chart-o.fa-fw
            %span.hidden-sm Reports

      %li{data: {active: 'users'}}
        = link_to users_path do
          %i.fa.fa-group.fa-fw
          %span.hidden-sm Users

      %li{data: {active: 'organizations'}}
        = link_to organizations_path do
          %i.fa.fa-globe.fa-fw
          %span.hidden-sm Organizations

      %li{data: {active: 'documents'}}
        = link_to documents_url do
          %i.fa.fa-file-text.fa-fw
          %span.hidden-sm Documents

