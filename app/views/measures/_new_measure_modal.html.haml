.modal.fade#new-measure-modal{role: 'dialog', aria: {labelledby: 'new-measure-modal-label', hidden: 'true'}}
  .modal-dialog
    .modal-content
      = form_for Measure.new, html: { class: 'form-horizontal' } do |f|
        .modal-header
          %button.close{type: 'button', data: {dismiss: 'modal'}, aria: {hidden: 'true'}} &times;
          %h4.modal-title#new-measure-modal-label New Measure

        .modal-body
          .form-group
            = f.label :description, class: 'control-label col-sm-2'
            .col-sm-10
              = f.text_field :description, class: 'form-control'

          .form-group
            = f.label :source_id, 'Source', class: 'control-label col-sm-2'
            .col-sm-10
              = f.collection_select :source_id, Source.all, :id, :name, {}, class: 'form-control'

          .form-group
            = f.label :link, class: 'control-label col-sm-2'
            .col-sm-10
              = f.text_field :link, class: 'form-control'

          .form-group
            = f.label :document_id, class: 'control-label col-sm-2'
            .col-sm-10
              = f.collection_select :document_id, Document.for_dashboard, :id, :name, {include_blank: true}, class: 'form-control'

        .modal-footer
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}} Close
          = f.submit 'Create', class: 'btn btn-primary'